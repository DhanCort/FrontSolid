@model List<JobsModel>

<div class="row">
    <div class="col-sm-3">
        <h2>Tasks to do</h2>
    </div>
</div>
<div class="">
    <!--Pill tabs for pending and in progress jobs-->
    <div class="col-sm-12 mt-3">
        <ul class="nav">
            <li class="res-phisical-nav">
                <a class="nav-link active" data-toggle="pill" href="#pendingtasks" id="pendingtasks-pill">Pending</a>
            </li>
            <li class="res-phisical-nav">
                <a class="nav-link" data-toggle="pill" href="#inprogresstasks" id="inprogresstasks-pill">InProgress</a>
            </li>
        </ul>
    </div>
    <!--Pill tabs content-->
    <div class="tab-content">
        <div class="tab-pane fade show active" id="pendingtasks">
            @{
                await Html.RenderPartialAsync("TaskPartialView", Model);
             }
        </div>
        <div class="tab-pane fade show" id="inprogresstasks"></div>
    </div>
</div>