                                            <label class="custom-control-label checkbox-label" for="boolIsEnableFalseCPQ">No</label>
                                        </div>
                                    </div>
                                    <span asp-validation-for="boolIsEnable" class="text-danger"></span>
                                </div>
                            </div>
