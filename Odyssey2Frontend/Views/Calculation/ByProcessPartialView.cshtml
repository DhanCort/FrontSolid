               data-strCalculationType="@if (ViewBag.boolDefaultCalculationProcess !=null && (bool)ViewBag.boolDefaultCalculationProcess)
				   {
					   <text>ProcessDefaults-PQ</text>
				   }
				   else
				   {
					   <text>PerQuantity</text>
				   }" data-strBy="process">
