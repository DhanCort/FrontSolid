<div class="modal fade" id="paymentsModal">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">

			<!-- Modal Header -->
			<div class="modal-header">
				<h2 class="modal-title">Receive Payment</h2>
				<button type="button" class="close" data-dismiss="modal">&times;</button>
			</div>

			<!-- Modal body -->
			<div class="modal-body" id="paymentModalBody">
				<form autocomplete="off" id="receivePaymentForm">
					<div class="form-group col-sm-12">
						<div class="row">
							<div class="col-md-4">
								<div>
									<label class="mr-sm-2 input-label">Customer</label>
								</div>
								<span class="select" style="width: 100%">
									<select class="mb-2 mr-sm-2" id="intContactId" name="intContactId" required>
										<option value="">Pick one</option>
									</select>
								</span>
							</div>
							<div class="col-md-4">
								<div>
									<label class="mr-sm-2 input-label">Find by invoice no.</label>
								</div>
								<div class="input-group mb-3">
									<span class="search-box" style="width:206px">
										<input type="text" class="search filterKeywordInput" placeholder="Find by invoice no.">
										<a class="fa fa-search" id="searchInvoiceForPayment" href="#"></a>
									</span>
								</div>
							</div>
							<div class="col-md-4 text-right">
								<div>
									<label class="input-label">Amount Received</label>
								</div>
								<div>
									<h5 id="amount-received-label">$ 0.00</h5>
								</div>
							</div>
							<div class="col-sm-4">
								<div>
									<label class="input-label">Payment date</label>
								</div>
								<div>
									<input class="form-control input-with-dropdowns" id="paymentDate" name="paymentDate"
										   data-toggle="datetimepicker" data-target="#paymentDate" required />
								</div>
							</div>
							<div class="col-md-4"></div>
							<div class="col-sm-4">
								<div class="">
									<label class="input-label">Amount Received:</label>
								</div>
								<div>
									<input class="form-control input-with-dropdowns" type="number" step="0.01"
										   name="numAmountReceived" value="0" />
								</div>
							</div>
							<div class="col-md-4">
								<div>
									<label class="input-label">Payment method:</label>
								</div>
								<div>
									<span class="select" style="width: 100%">
										<select id="intPkPaymentMethod" name="intPkPaymentMethod">
											<option>Pick one</option>
										</select>
									</span>
								</div>
							</div>
							<div class="col-md-4">
								<div>
									<label class="input-label">Reference no.</label>
								</div>
								<div>
									<input class="form-control input-with-dropdowns" name="strReference" />
								</div>
							</div>
							<div class="col-md-4">
								<div>
									<label class="input-label">Deposit to:</label>
								</div>
								<div>
									<span class="select" style="width: 100%">
										<select id="intPkAccount" name="intPkAccount">
											<option>Pick one</option>
										</select>
									</span>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-5" id="openInvoicesSection" hidden>
								<h3>Open Invoices</h3>

								<div class="responsive-table" style="max-height: 25vh; overflow:auto">
									<table class="table table-hover">
										<thead>
											<tr class="tr-calculation-header">
												<th></th>
												<th>Number</th>
												<th colspan="2">Original Amount</th>
												<th colspan="2">Open Balance</th>
											</tr>
										</thead>
										<tbody id="openInvoicesTableBody"></tbody>
									</table>
								</div>
							</div>
							<div class="col-md-2 text-center mt-5" hidden>
								<div>
									<div>
										<label class="input-label">Amount to apply</label>
									</div>
									<div id="amountToApplySection">
										0.00
									</div>
								</div>
								<div>
									<div>
										<label class="input-label">Amount to credit</label>
									</div>
									<div id="amountToCreditSection">
										0.00
									</div>
								</div>
							</div>
							<div class="col-md-5" id="creditSection" hidden>
								<h3>Credits</h3>
								<div class="responsive-table" style="max-height: 25vh; overflow:auto">
									<table class="table table-hover">
										<thead>
											<tr class="tr-calculation-header">
												<th></th>
												<th>Number</th>
												<th colspan="2">Original Amount</th>
												<th colspan="2">Open Balance</th>
											</tr>
										</thead>
										<tbody id="creditTableBody"></tbody>
									</table>
								</div>
							</div>
						</div>
					</div>

					<button type="submit" class="btn btn-primary" hidden>Save</button>
				</form>
			</div>

			<!-- Modal footer -->
			<div class="modal-footer">
				<button type="button" class="btn btn-primary" id="savePaymentBtn"><i class="fa fa-floppy-o"></i> Save</button>
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>
