
@{
    ViewData["Title"] = "Calendar";
}

<div class="row">
    <div class="col-sm-4">
        <div class="row">
            <div class="col-sm-3">
                <button class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="Previous week"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i></button>
            </div>
            <div class="col-sm-6 font-bold text-center font-md">April</div>
            <div class="col-sm-3">
                <button class="btn btn-primary pull-right" data-toggle="tooltip" data-placement="top" title="Next week"><i class="fa fa-chevron-circle-right" aria-hidden="true"></i></button>
            </div>
        </div>
        <div class="row" id="textDay">
            <div class="col-md-1-5 text-center"></div>
            <div class="col-md-1-5">Sun</div>
            <div class="col-md-1-5">Mon</div>
            <div class="col-md-1-5">Tue</div>
            <div class="col-md-1-5">Wed</div>
            <div class="col-md-1-5">Thu</div>
            <div class="col-md-1-5">Fri</div>
            <div class="col-md-1-5">Sat</div>
            <div></div>
        </div>
        <div class="row" id="textNumber">
            <div class="col-md-1-5 text-center"></div>
            <div class="col-md-1-5 font-bold font-md" data-day-of-week="1">19</div>
            <div class="col-md-1-5 font-bold font-md" data-day-of-week="2">20</div>
            <div class="col-md-1-5 font-bold font-md" data-day-of-week="3">21</div>
            <div class="col-md-1-5 font-bold font-md" data-day-of-week="4">22</div>
            <div class="col-md-1-5 font-bold font-md" data-day-of-week="5">23</div>
            <div class="col-md-1-5 font-bold font-md" data-day-of-week="6">24</div>
            <div class="col-md-1-5 font-bold font-md" data-day-of-week="7">25</div>
        </div>
        <div style="display: block; overflow-y: scroll; height: 490px">
            @for (int i = 1; i < 25; i++)
            {
                int h = i - 1;
                <div class="row" style="margin-top: 0% !important">
                    <div class="col-md-1-5 text-center hour" data-hour="@h">@h:00</div>
                    @for (int j = 1; j < 8; j++)
                    {
                        <div class="col-md-1-5 p-4 task-cell" style="border: 0.5px solid #dee2e6" data-coord-cell="@h,@j"></div>
                    }
                </div>
            }
        </div>
    </div>
    <div class="col-sm-7">
        <div class="row">
            <div class="col-sm-12">
                <form class="form-horizontal">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6" id="intnPkResourceDiv">
                                <label for="" class="ml-2">Periodicity</label>
                                <select class="form-control ml-2">
                                    <option value="1">Daily</option>
                                    <option value="2">Weekly</option>
                                    <option value="3">Monthly</option>
                                    <option value="4">Annually</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </form>
                <form class="form-inline">
                    <div class="row">
                        <label for="" class="font-bold">Start:</label>
                        <label for="" class="ml-2">Hour</label>
                        <select class="form-control ml-2">
                            @for (int i = 0; i < 24; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                        <label class="ml-4" for="">Min</label>
                        <select class="form-control ml-2">
                            <option value="0">00</option>
                            <option value="30">30</option>
                        </select>
                        <label for="" class="ml-5">Day</label>
                        <input type="date" class="form-control ml-2"/>
                    </div>

                    <div class="row">
                        <label for="" class="font-bold">End:</label>
                        <label for="" class="ml-3">Hour</label>
                        <select class="form-control ml-2">
                            @for (int i = 0; i < 24; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                        <label class="ml-4" for="">Min</label>
                        <select class="form-control ml-2">
                            <option value="0">00</option>
                            <option value="30">30</option>
                        </select>
                        <label for="" class="ml-5">Day</label>
                        <input type="date" class="form-control ml-2" />
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="table-responsive">
                    <table class="table table-fixed">
                        <thead>
                            <tr>
                                <th scope="col" class="col-3">#</th>
                                <th scope="col" class="col-3">First</th>
                                <th scope="col" class="col-3">Last</th>
                                <th scope="col" class="col-3">Handle</th>
                            </tr>
                        </thead>
                        <tbody>
