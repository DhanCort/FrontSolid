@model List<TimeZoneModel>

<form class="row" id="timeZoneForm">
	<div class="col-sm-10">
		<span class="select" style="width: 100%; margin-top: 5px; margin-bottom: 10px">
			<select name="strTimeZoneId" required>
				<option value="">Pick one</option>
				@foreach (TimeZoneModel timezone in Model)
				{
					if (
						timezone.boolSelected
						)
					{
						<option value="@timezone.strTimeZoneId" selected>@timezone.strTimeZone</option>
					}
					else
					{
						<option value="@timezone.strTimeZoneId">@timezone.strTimeZone</option>
					}
				}
			</select>
		</span>
	</div>
	<div class="col-sm-2 text-center">
		<button class="btn btn-primary">Update</button>
	</div>
</form>