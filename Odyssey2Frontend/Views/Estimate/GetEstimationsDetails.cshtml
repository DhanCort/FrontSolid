@model List<EstimatesSummaryModel>

<div class="table-responsive">
	<table class="table table-hover">
		<thead>
			<tr class="tr-calculation-header">
				<th>Name</th>
				<th>Quantity</th>
				<th colspan="2">Price</th>
			</tr>
		</thead>
		<tbody>
			@if (
			   Model.Count > 0
			   )
			{
				int intPriceNumber = 1;
				@foreach (EstimatesSummaryModel estimateSummary in Model)
				{
					<tr class="tr-calculation-row">
						<td>@estimateSummary.strEstimationName</td>
						<td>@estimateSummary.intQuantity</td>
						<td>$</td>
						<td class="text-right">
							@estimateSummary.numPrice.ToString("n2")
							<input type="hidden" id="EstimatePrice-@intPriceNumber" value="@estimateSummary.numPrice" />
						</td>
					</tr>
					intPriceNumber = intPriceNumber + 1;
				}
			}
			else
			{
				<tr>
					<td>This section contains no records.</td>
				</tr>
			}
		</tbody>
	</table>
</div>